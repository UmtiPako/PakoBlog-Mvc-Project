@model IEnumerable<PakoBlog.Models.Post>

@{
    ViewData["Title"] = "Home Page";
}
    <header class="masthead" style="background-image: url('/img/bg.jpg');">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>PakoBlog</h1>
                        <span class="subheading">UmtiPako'nun Random Bullshit Mekanı</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

<div class="container">
<div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
        @foreach (var item in Model)
        {
            @if (item.isPublished)
            {
                         <div class="post-preview">
                                        <a asp-route-postID="@item.ID" asp-action="Post">
                                            <h2 class="post-title">@item.Title</h2>
                                            <h3 class="post-subtitle">@item.Subtitle</h3>
                                        </a>
                                        <p class="post-meta">
                                            Posted by
                                            <a>@item.Author.Name @item.Author.Surname</a>
                                            on @item.publishTime - @item.Category.Name
                                        </p>
                                  </div>
            }
        }

                
 <br />
 
                </div>
            </div>
    </div>